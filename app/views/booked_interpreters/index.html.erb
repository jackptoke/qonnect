<div class="container jumbotron">
<h1>Current Booking</h1>

<table width="100%">
  <thead>
    <tr>
      <th>Date</th>
      <th>Job Title</th>
      <th>Location</th>
      <th>Client</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @booked_interpreters.each do |booked_interpreter| %>
      <% if ["PARTIALLY_ASSIGNED", "ASSIGNED"].include?(booked_interpreter.job_booking.job_status) %>
        <tr>
        <td><%= booked_interpreter.job_booking.appointment_time.to_formatted_s(:short)  %></td>
        <td><%= booked_interpreter.job_booking.booking_title %></td>
        <td><%= booked_interpreter.job_booking.location.suburb %></td>
        <td><%= booked_interpreter.job_booking.client.organisation_name %></td>
        <td><%= link_to 'Show', booked_interpreter %> | <%= link_to "Return job", interpreter_return_job_path(:id => booked_interpreter.id), method: :patch, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
</div>
